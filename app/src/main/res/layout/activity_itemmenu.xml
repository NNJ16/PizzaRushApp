<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".manageitem.itemmenu">

    <Button
        android:id="@+id/btnadd"
        android:layout_width="116dp"
        android:layout_height="53dp"
        android:layout_marginTop="76dp"
        android:background="@color/colorLightGreen"
        android:text="ADD"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toTopOf="@+id/btnview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <Button
        android:id="@+id/btnview"
        android:layout_width="116dp"
        android:layout_height="53dp"
        android:background="@color/colorLightGreen"
        android:text="@string/btn_view"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.909" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="290dp"
        android:layout_height="307dp"
        android:layout_marginTop="64dp"
        android:adjustViewBounds="false"
        android:contentDescription="@logol"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pizza_logo_vector_25327_119"
        tools:srcCompat="@drawable/pizza_logo_vector_25327_119" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="198dp"
        android:layout_height="62dp"
        android:layout_marginTop="270dp"
        android:text="@string/title_itemmanagement"
        android:textColor="@color/colorWhite"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_chainStyle="spread" />

</androidx.constraintlayout.widget.ConstraintLayout>